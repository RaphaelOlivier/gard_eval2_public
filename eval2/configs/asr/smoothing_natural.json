{
    "_description": "Baseline DeepSpeech ASR on LibriSpeech, contributed by MITRE Corporation",
    "adhoc": {
        "skip_adversarial": true
    },
    "attack": {
        "knowledge": "white",
        "kwargs": {
            "max_iter":10,
            "batch_size": 16
        },
        "module": "art.attacks.evasion",
        "name": "ProjectedGradientDescent",
        "targeted": false
    },
    "dataset": {
        "batch_size": 1,
        "eval_split": "test_clean",
        "framework": "numpy",
        "module": "armory.data.datasets",
        "name": "librispeech",
        "train_split": "train_clean100"
    },
    "defense": {
        "kwargs": {
            "sigma": 0.02,
            "augmentation": false,
            "ratio": 1.0,
            "apply_fit": true,
            "apply_predict":true,
            "filter":"asnr_wiener",
            "filter_kwargs": {
                "sr": 16000,
                "hop": 160,
                "nfft": 320,
                "apply_fit": true,
                "apply_predict":true
            },
            "enhancer":null,
            "enhancer_kwargs":{
                "load_weights_file":"segan+_generator.ckpt",
                "cfg_file":"train.opts"
            }
        },
        "module": "eval2.defenses.smoothing",
        "name": "SpeechNoiseAugmentation",
        "type": "Preprocessor"
    },
    "metric": {
        "means": false,
        "perturbation": [],
        "record_metric_per_sample": true,
        "task": [
            "word_error_rate"
        ]
    },
    "model": {
        "fit": false,
        "fit_kwargs": {
            "nb_epochs": 15,
            "save_weights_file":"deepspeech_localtrain.pth"
        },
        "model_kwargs": {
        },
        "module": "eval2.models.deep_speech",
        "name": "get_art_model",
        "predict_kwargs": {
            "transcription_output": true
        },
        "weights_file": null,
        "wrapper_kwargs": {            
            "use_half":false,
            "use_amp":false,
            "load_weights_file":"librispeech_pretrained_v2.pth",
            "random_init":false,
            "niters_forward":50,
            "niters_backward":1,
            "decoder_type":"beam",
            "beam_width":1,
            "voting_kwargs":{
                "voting":"rover_freq",
                "rover_bin_path":"/SCTK/bin/rover",
                "vote_on_nbest":false,
                "use_alignments":true,
                "use_confidence":false
            }
        }
    },
    "scenario": {
        "kwargs": {},
        "module": "armory.scenarios.audio_asr",
        "name": "AutomaticSpeechRecognition"
    },
    "sysconfig": {
        "docker_image": "perspecta/pytorch16-speech:0.12.2",
        "external_github_repo": ["hkakitani/deepspeech.pytorch","santi-pdp/segan_pytorch"],
        "gpus": "all",
        "local_repo_path": null,
        "output_dir": null,
        "output_filename": null,
        "use_gpu": true
    }
}
